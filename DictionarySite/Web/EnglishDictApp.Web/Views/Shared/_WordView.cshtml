@model EnglishDictApp.Web.ViewModels.Word.WordInListViewModel

@{
    ViewBag.Title = "_AdminArticleView";
}

<tr>
    <td>@Html.ActionLink(Model.Title, "Details", new { id = Model.Id })</td>
    <td>@Model.PartOfSpeech</td>
    <td>
    <ul>
        @foreach (var meaning in Model.Meanings)
        {
            <li>@meaning</li>
        }
    </ul>
    </td>
    <td>@Html.ActionLink("Edit", "Edit", null, new { id = Model.Id,order = Model.Order,currentPage = Model.CurrentPage}, new { type = "button", @class = "btn btn-primary" })</td>
    <td>@Html.ActionLink("Delete", "Delete", null, new { id = Model.Id, order = Model.Order, currentPage = Model.CurrentPage }, new { type = "button", @class = "btn btn-warning" })</td>
</tr>