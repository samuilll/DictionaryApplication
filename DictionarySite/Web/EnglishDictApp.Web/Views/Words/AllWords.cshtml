@using EnglishDictApp.Web.HtmlHelpers
@model EnglishDictApp.Web.ViewModels.Word.AllWordsViewModel

@{
    ViewData["Title"] = "AllWords";
}

<h2>AllWords</h2>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                PartOfSpeech
            </th>
            <th>
                Meaning
            </th>
            <th colspan="2">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var word in Model.Words)
        {
            @Html.Partial("_WordView", word)
        }
    </tbody>
</table>




@Html.PageLinks(Model.PagingInfo, x => Url.Action("AllWords", new { currentPage = x}))

@Html.ActionLink("Create New Word", "Create", null, new { type = "button", @class = "btn btn-success" })
